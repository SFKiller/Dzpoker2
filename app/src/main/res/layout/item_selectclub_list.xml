<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/layout_clubinfo"
    >


    <ImageView
        android:id="@+id/iv_club_head"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginBottom="10px"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:src="@drawable/default_club_head"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
            <TextView
                android:id="@+id/tv_club_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海俱乐部"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="8px"
                android:layout_marginTop="8px"
                android:layout_marginLeft="20px"
                android:textSize="24dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_marginLeft="30px"
                    >
                    <ImageView
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:layout_marginBottom="1px"
                        android:layout_marginTop="1px"
                        android:layout_marginLeft="1px"
                        android:layout_marginRight="1px"
                        android:src="@drawable/temp1"
                        android:layout_gravity="center_vertical"

                        />
                    <TextView
                        android:id="@+id/tv_club_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3/100"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginBottom="8px"
                        android:layout_marginTop="8px"

                        android:textSize="12dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_marginLeft="30px"
                    >
                    <ImageView
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:layout_marginBottom="1px"
                        android:layout_marginTop="1px"
                        android:layout_marginLeft="1px"
                        android:layout_marginRight="1px"
                        android:src="@drawable/temp1"
                        android:layout_gravity="center_vertical"

                        />
                    <TextView
                        android:id="@+id/tv_club_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="常州"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginBottom="8px"
                        android:layout_marginTop="8px"
                        android:textSize="12dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="160px"
                android:layout_height="60px"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"

            >
                <Button
                    android:id="@+id/btn_add_into_club"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加入"
                    android:background="@color/orange"/>
            </LinearLayout>
        </LinearLayout>




