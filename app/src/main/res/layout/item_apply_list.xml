<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="260px"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="20px"
    android:paddingBottom="20px"
    android:id="@+id/layout_apply"
    android:background="@drawable/game_bj"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间："
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="8px"
            android:layout_marginTop="8px"
            android:layout_marginLeft="20px"
            android:textSize="12dp"
           />
        <TextView
            android:id="@+id/tv_house_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的房间"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="8px"
            android:layout_marginTop="8px"
            android:layout_marginLeft="20px"
            android:textSize="12dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_apply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40px"
            android:text="20:31"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="8px"
            android:layout_marginTop="8px"
            android:layout_marginLeft="20px"
            android:textSize="12dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩家："
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="8px"
            android:layout_marginTop="8px"
            android:layout_marginLeft="20px"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/tv_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏者"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="8px"
            android:layout_marginTop="8px"
            android:layout_marginLeft="20px"
            android:textSize="12dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_apply_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_info"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="8px"
            android:layout_marginTop="8px"
            android:layout_marginLeft="20px"
            android:textSize="12dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="40px"
        android:layout_marginTop="20px"
        android:layout_gravity="right">
        <Button
            android:id="@+id/button_refuse"
            android:layout_gravity="center_horizontal"
            android:layout_width="120px"
            android:layout_height="44px"
            android:text="拒绝"
            android:textColor="@color/black"
            android:background="@drawable/apply_cancel"/>
        <Button
            android:id="@+id/button_apply"
            android:layout_marginLeft="40px"
            android:layout_gravity="center_horizontal"
            android:layout_width="120px"
            android:layout_height="44px"
            android:text="同意"
            android:textColor="@color/black"
            android:background="@drawable/buy_score_bj"/>





    </LinearLayout>




</LinearLayout>




