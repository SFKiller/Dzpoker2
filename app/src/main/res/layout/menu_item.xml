<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:tag="menu_item"
    android:orientation="vertical"
    android:minHeight="54dp"
    android:gravity="center">

    <TextView
        android:id="@+id/menu_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bottom_menu_btn_margin"
        android:layout_marginRight="@dimen/bottom_menu_btn_margin"
        android:gravity="center"
        android:textColor="@color/bottom_menu_btn_text_commom_color"
        android:textSize="@dimen/bottom_menu_btn_text_size"
        android:layout_weight="1"
        android:text="支付方式"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/item_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_below="@id/menu_item"
        android:textSize="8dp"
        android:paddingBottom="2dp"
        android:text="支付方式"
        android:gravity="center"
        android:layout_gravity="center"/>
</LinearLayout>
